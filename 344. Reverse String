//Approach: It uses two pointers to swap characters at opposite ends of the string and move inward until they meet in the middle

class Solution {
    public void reverseString(char[] s) {
        // Initialize two pointers
        int start = 0;
        int end = s.length - 1;
        // Swap characters 
        while (start < end) {
            char temp = s[start];
            s[start] = s[end];
            s[end] = temp;
            start++;
            end--;
            }
    }
}
